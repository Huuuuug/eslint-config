{
  "name": "@ganghu/eslint-config",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@9.15.1",
  "description": "ESLint config for ganghu",
  "author": "Gang hu (https://github.com/Huuuuug)",
  "license": "MIT",
  "homepage": "https://github.com/Huuuuug/eslint-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Huuuuug/eslint-config.git"
  },
  "keywords": [
    "eslint-config"
  ],
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint",
    "lint:lint-staged": "lint-staged",
    "lint:fix": "eslint --fix",
    "build:typegen": "tsx scripts/typegen.ts",
    "prepare": "simple-git-hooks",
    "build": "tsup",
    "release": "pnpm publish"
  },
  "peerDependencies": {
    "eslint": "catalog:peer"
  },
  "dependencies": {
    "@stylistic/eslint-plugin": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint-config-flat-gitignore": "catalog:prod",
    "eslint-flat-config-utils": "^2.0.1",
    "eslint-plugin-vue": "^10.0.0",
    "globals": "^16.0.0",
    "vue-eslint-parser": "^10.1.1"
  },
  "devDependencies": {
    "@types/node": "catalog:dev",
    "eslint-typegen": "catalog:dev",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^15.5.0",
    "tsup": "^8.4.0",
    "tsx": "catalog:dev",
    "typescript": "^5.8.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}